  "dependencies": {
    "app-root-path": "^2.0.1",
    "css-selector-tokenizer": "^0.7.0",
    "cssauron": "^1.4.0",
    "semver-dsl": "^1.0.1",
    "source-map": "^0.5.7",
    "sprintf-js": "^1.0.3"
  },
  "description": "Linting for Angular applications, following angular.io/styleguide.",
  "devDependencies": {
    "@angular/compiler": "6.0.0-rc.0",
    "@angular/core": "6.0.0-rc.0",
    "@types/chai": "^3.4.33",
    "@types/less": "0.0.31",
    "@types/mocha": "^2.2.48",
    "@types/node": "^6.0.103",
    "@types/node-sass": "^3.10.31",
    "@types/sprintf-js": "0.0.27",
    "chai": "^3.5.0",
    "chai-spies": "^0.7.1",
    "husky": "^0.14.3",
    "js-yaml": "^3.11.0",
    "json-stringify-pretty-compact": "^1.1.0",
    "lint-staged": "^7.0.4",
    "minimalist": "1.0.0",
    "mocha": "3.0.2",
    "node-sass": "^4.8.3",
    "prettier": "^1.12.1",
    "rimraf": "^2.6.2",
    "rxjs": "6.0.0-beta.0",
    "rxjs-compat": "^6.0.0-beta.1",
    "ts-node": "1.2.2",
    "tslint": "^5.0.0",
    "typescript": "2.4.0",
    "zone.js": "^0.8.20"
  },
  "homepage": "https://github.com/mgechev/codelyzer#readme",
  "keywords": ["Angular", "codelyzer", "lint", "nglint", "style guide", "styleguide", "tslint"],
  "license": "MIT",
  "lint-staged": {
    "*.ts": ["yarn lint:fix", "git add"],
    "*.{css,json,md,scss,ts}": ["yarn format:fix", "git add"]
  },
  "main": "index.js",
  "name": "codelyzer",
  "peerDependencies": {
    "@angular/compiler": ">=2.3.1 <7.0.0 || >6.0.0-beta <7.0.0",
    "@angular/core": ">=2.3.1 <7.0.0 || >6.0.0-beta <7.0.0",
    "tslint": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mgechev/codelyzer.git"
  },
  "scripts": {
    "build": "rimraf dist && tsc && npm run lint && npm t",
    "copy:common": "cp README.md dist",
    "docs": "ts-node build/buildDocs.ts",
    "format:check": "prettier --config ./.prettierrc --list-different *.{json,md} \"src/**/*.{css,scss,ts}\" \"test/**/*.{css,scss,ts}\"",
    "format:fix": "prettier --write *.{json,md} src/**/*.{css,scss,ts} test/**/*.{css,scss,ts}",
    "lint": "tslint -c tslint.json \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint:fix": "yarn lint --fix",
    "precommit": "lint-staged && npm test",
    "prepare:package": "cat package.json | ts-node build/package.ts > dist/package.json",
    "release":
      "npm run build && rimraf dist && tsc -p tsconfig-release.json && npm run copy:common && npm run prepare:package && BUILD_TYPE=prod npm run set:vars",
    "set:vars": "ts-node build/vars.ts --src ./dist",
    "test": "rimraf dist && tsc && cp -r test/fixtures dist/test && mocha dist/test --recursive",
    "test:watch":
      "rimraf dist && tsc && cp -r test/fixtures dist/test && BUILD_TYPE=dev npm run set:vars && mocha dist/test --watch --recursive",
    "tsc": "tsc",
    "tsc:watch": "tsc --w",
    "tscv": "tsc --version"
  },
  "version": "4.3.0"
}
