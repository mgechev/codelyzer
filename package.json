    "@types/mocha": "5.2.7",
    "@types/node": "11.15.50",
    "@types/node-sass": "4.11.2",
    "@types/sprintf-js": "1.1.2",
    "cat": "0.2.0",
    "chai": "4.2.0",
    "chai-spies": "0.7.1",
