    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-angular": "^7.5.0",
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.6",
    "@types/node": "^11.10.4",
    "@types/node-sass": "^4.11.0",
    "@types/sprintf-js": "^1.1.2",
    "cat": "^0.2.0",
